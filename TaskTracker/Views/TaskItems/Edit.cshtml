@model TaskTracker.Models.TaskItem
@{
    ViewData["Title"] = "Edit Task";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4 border-0" style="background-color: #fdf9f6; border-radius: 18px;">
        <h2 class="text-center mb-4" style="color: #6a8f72;">🌿 Edit Your Lovely Task</h2>

        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="Title" class="form-label fw-bold" style="color: #507c59;"></label>
                <input asp-for="Title" class="form-control" style="border-radius: 12px; border: 1px solid #c8e1cc;" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description" class="form-label fw-bold" style="color: #507c59;"></label>
                <textarea asp-for="Description" class="form-control" rows="3" style="border-radius: 12px; border: 1px solid #eccde2;"></textarea>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Category" class="form-label fw-bold" style="color: #507c59;"></label>
                <input asp-for="Category" class="form-control" style="border-radius: 12px; border: 1px solid #eccde2;" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="DueDate" class="form-label fw-bold" style="color: #507c59;"></label>
                <input asp-for="DueDate" class="form-control" type="date" style="border-radius: 12px; border: 1px solid #c8e1cc;" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Priority" class="form-label fw-bold" style="color: #507c59;"></label>
                <select asp-for="Priority" class="form-control" style="border-radius: 12px; border: 1px solid #eccde2;">
                    <option>Low</option>
                    <option>Medium</option>
                    <option>High</option>
                </select>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Status" class="form-label fw-bold" style="color: #507c59;"></label>
                <select asp-for="Status" class="form-control" style="border-radius: 12px; border: 1px solid #c8e1cc;">
                    <option>Pending</option>
                    <option>Completed</option>
                </select>
            </div>

            <div class="d-flex justify-content-center">
                <button type="submit" class="btn" style="background-color: #bde0c3; color: #3a4b3c; border-radius: 12px;">🌸 Save Changes</button>
                <a asp-action="Index" class="btn ms-2" style="background-color: #f5c6da; color: #3a4b3c; border-radius: 12px;">Cancel</a>
            </div>
        </form>
    </div>
</div>
