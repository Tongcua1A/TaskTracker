</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Chart.js code to generate charts (replace with your actual data)
        const todayCtx = document.getElementById('todayChart').getContext('2d');
        new Chart(todayCtx, {
            type: 'bar',
            data: {
                labels: ['Today', 'Tomorrow'],
                datasets: [{
                    label: 'Tasks',
                    data: [3, 1],
                    backgroundColor: ['#f06d06', '#f0a06d']
                }]
            }
        });

        const weekCtx = document.getElementById('weekChart').getContext('2d');
        new Chart(weekCtx, {
            type: 'bar',
            data: {
                labels: ['This Week', 'Next Week'],
                datasets: [{
                    label: 'Tasks',
                    data: [5, 1],
                    backgroundColor: ['#f06d06', '#f0a06d']
                }]
            }
        });

    </script>
}
